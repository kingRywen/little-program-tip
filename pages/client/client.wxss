/**index.wxss**/
.container {
  padding-bottom: 80px
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 80rpx 0;
  background: #ff635c;  /* fallback for old browsers */
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  position: relative;
  border: 3px solid rgba(255, 255, 255, 0.35);
  box-shadow: 0 0 0 5px rgba(255, 255, 255, 0.1);
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  width: 100%;
  color: #9f9f9f;
}
.user-motto {
  display:block;
  padding:30px;
  padding-bottom: 20px;
}
.showBox {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  padding: 0 20px;
}
.selectBox {
  box-sizing: border-box;
  flex: 0 0 33.33%;
}
.selectBox .selectBtn {
  display: block;
  padding: 10px;
  margin: 10px;
  text-align: center;
  border-radius: 4px;
  border: 1px solid #ea5419;
  color: #ff635c;
  font-size: 14px;
}
.userBottom {
  padding: 30px;
  margin-top: 120rpx
}
.selectBtn.active {
  color: #fff;
  background: #ff7e5c;  /* fallback for old browsers */
  background: -webkit-linear-gradient(to bottom, #ff975c, #ff7e5c);  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to bottom, #ff975c, #ff7e5c); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  box-shadow: 0 6px 29px rgba(255, 146, 92, 0.35);
}
