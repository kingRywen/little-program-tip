.container {
  padding-bottom: 80px;
  background: #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 80rpx 0;
  background: #ff635c;  /* fallback for old browsers */
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  position: relative;
  border: 3px solid rgba(255, 255, 255, 0.35);
  box-shadow: 0 0 0 5px rgba(255, 255, 255, 0.1);
}

.userinfo-nickname {
  color: #fff;
}
.code {
  margin-top: 2em;
  width:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
}
.btn-box {
  width: 100%;
}
.btn {
  width: 80%
}
.bgImg {
  width: 200px;
  height: 200px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30px
}
.tip {
  font-size: 12px;
  color: #999;
  margin: 180rpx 0
}