
page, body {
  height: 100%;
  background: #f8f8f8;
  font-size: 14px;
}
.wrapper{
  padding: 30rpx; 
}
.wrapper, .box {
  display: flex;
  flex-direction: column;
  flex: auto;
}
.box {
  box-sizing: border-box;
  background: #fff;
  flex: auto;
  width: 100%;
  padding: 60rpx 30rpx;
  border-radius: 3px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.03)
}
.box button {
  width: 100%;
  font-size: 16px;
}
.title {
  font-size: 12px;
}
.money {
  font-size: 32px;
  margin: 40rpx 0;
  font-family: fantasy;
  position: relative;
  padding: 20rpx 0;
  padding-left: 24px;
  border-bottom: 1px solid #f8f8f8;
  height: 32px;
}
.money::before {
  content: 'ï¿¥';
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 24px;
  
}
.tips {
  font-size: 12px;
  color: #999;
  padding-bottom: 40rpx;
  margin-bottom: 40rpx;
}
