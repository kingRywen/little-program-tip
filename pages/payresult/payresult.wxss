page, body {
  height: 100%;
  background: #f8f8f8;
  font-size: 14px;
}
.wrapper{
  padding: 30rpx; 
}
.wrapper, .box {
  display: flex;
  flex-direction: column;
  flex: auto;
  align-items: center
}
.box {
  box-sizing: border-box;
  background: #fff;
  flex: auto;
  width: 100%;
  padding: 60rpx 30rpx;
  border-radius: 3px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.03)
}
.title {
  font-size: 16px;
  margin-top: 20rpx;
  color: #4395ff;
}
.tips {
  font-size: 12px;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
}
.money {
  margin-top: 20rpx;
  font-size: 28px;

}
.warn {
  color: #ff635c
}
