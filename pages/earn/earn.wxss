page, body {
  height: 100%;
  background: #f8f8f8
}
.wrapper {
  font-size: 14px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: auto
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  background: #ff635c;
  color: #fff;
  padding: 40rpx 30rpx
}
.header .header-item, .picker {
  display: flex;
  position: relative;
  /* align-items: center; */
  justify-content: center;
  flex-direction: column;
  padding-right: 15rpx
}

.header .header-item:first-child::after {
  content: '';
  display: block;
  position: absolute;
  width: 1px;
  height: 100%;
  right: -30px;
  border-right: 1px dotted #fff;
}

.item-title {
  font-size: 12px;
  opacity: 0.6;
  margin-bottom: 12px;
}
.header-first {
  margin-bottom: 0;
}
.item-main {
  font-size: 16px
}
.m{
  position: relative
}
.m::after {
  content: '';
  display: block;
  position: absolute;
  width: 0;
  height: 0;
  top: 6px;
  border: 6px solid #fff;
  border-color: transparent;
  border-top-color: #fff;
  right: -16px;

}
.item-main .num {
  font-size: 24px
}
.bottom{
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  flex: auto
}
.bottom .list{
  background: #fff;
  border-bottom: 1px solid #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx
}
.list .left {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .left .text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx
}
.text .time {
  font-size: 12px;
  color: #999;
  margin-bottom: 10rpx
}
.bottom .list image {
  width: 40px;
  height: 40px;
}
.list-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: auto;
  color: #75848d;
  font-size: 14px;
}

.img {
  width: 100px;
  height: 100px;
  text-align: center;
  margin-bottom: 25rpx
}
