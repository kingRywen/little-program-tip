body, page {
  background: #f8f8f8;
  height: 100%
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  font-size: 14px;
  height:auto;
  
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background: #ff635c;  /* fallback for old browsers */
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  position: relative;
  border: 3px solid rgba(255, 255, 255, 0.35);
  box-shadow: 0 0 0 5px rgba(255, 255, 255, 0.1);
}
.wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 80rpx
}
.box {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
  flex: auto;
  padding: 100rpx 80rpx 0 80rpx; 
  font-size: 36px
}
.money {
  opacity: 0.6;
  font-size: 12px;
  margin-bottom: 30rpx
}

