.bottom{
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  flex: auto;
  width: 100%
}
.bottom .list{
  background: #fff;
  border-bottom: 1px solid #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  color: #333
}
.list .left {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .left .text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx
}
.text .time {
  font-size: 12px;
  color: #999;
  margin-bottom: 10rpx
}
.bottom .list image {
  width: 40px;
  height: 40px;
}
.list-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: auto;
  color: #75848d;
  font-size: 14px;
}

.img {
  width: 100px;
  height: 100px;
  text-align: center;
  margin-bottom: 25rpx
}
.money1 {
  font-size: 16px;
  color: #333
}
.myBtnPrimary {
  margin: 40rpx 0
}
